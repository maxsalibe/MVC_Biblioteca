@model IEnumerable<Biblioteca.Modelo.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.edicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rutaimagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.edicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rutaimagen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.libroId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.libroId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.libroId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
